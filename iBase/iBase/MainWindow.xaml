<Window x:Class="iBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iBase"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Online" Click="OnlineMenuItemClick"/>
            <MenuItem Header="Offline" Click="OfflineMenuItemClick"/>
        </Menu>
        <Grid x:Name="MainWindowSpace" />
        
        <!-- Effortless data binding:
        public dynamic SomeData { get; set; }
        SomeData.WhatEver = "Yo Man!";
        
        <TextBlock Text="{Binding SomeData.WhatEver}" />
        -->
    </DockPanel>
</Window>
