<Window x:Class="iBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iBase"
        mc:Ignorable="d"
        Title="iBase"
        MinHeight="500" MinWidth="500"
        MaxHeight="800" MaxWidth="800"
        Background="#132028"
        UseLayoutRounding="True">
    <DockPanel>
        <Menu TextElement.Foreground="White" DockPanel.Dock="Top" Background="Transparent">
            <MenuItem Header="Online" Click="OnlineMenuItemClick"/>
            <MenuItem Header="Offline" Click="OfflineMenuItemClick"/>
            <MenuItem Header="Artists" Click="AllArtistsClick"/>
            <MenuItem Header="Albums" Click="AllAlbumsClick"/>
            <MenuItem Header="Tracks" Click="AllTracksClick"/>
        </Menu>
        <Grid TextElement.Foreground="White" x:Name="MainWindowSpace" />
        <!-- Effortless data binding:
        public dynamic SomeData { get; set; }
        SomeData.WhatEver = "Yo Man!";
        
        <TextBlock Text="{Binding SomeData.WhatEver}" />
        -->
    </DockPanel>
</Window>
